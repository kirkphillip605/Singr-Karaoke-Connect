# Enable build scripts for required dependencies
enable-pre-post-scripts=true

# Allow build scripts for Prisma and build tools
# This resolves the warning: "Ignored build scripts: @prisma/client, @prisma/engines, esbuild, prisma"
only-built-dependencies[]=@prisma/client
only-built-dependencies[]=@prisma/engines
only-built-dependencies[]=esbuild
only-built-dependencies[]=prisma
