{
  "name": "@singr/database",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "db:generate": "dotenv -e ../../.env -- prisma generate",
    "db:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev",
    "db:migrate:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "db:seed": "dotenv -e ../../.env -- tsx prisma/seed.ts",
    "db:reset": "dotenv -e ../../.env -- prisma migrate reset --force",
    "db:push": "dotenv -e ../../.env -- prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "@singr/observability": "workspace:*"
  },
  "devDependencies": {
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
